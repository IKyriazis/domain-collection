---
// Get the domains
const domains = [
	'example1.com',
	'example2.com',
	'example3.com',
	'localhost'
];

// Get current domain (without www.)
const currentDomain = Astro.url.hostname.replace('www.', '');

// Find the current domain index
const currentIndex = domains.indexOf(currentDomain) !== -1 
	? domains.indexOf(currentDomain) 
	: 0;

// Split domains into left, current, and right
const leftDomains = domains.slice(0, currentIndex);
const rightDomains = domains.slice(currentIndex + 1);
